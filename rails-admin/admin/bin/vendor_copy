#!/bin/bash
css_out=app/assets/stylesheets/vendor/
js_out=app/assets/javascripts/vendor/
mkdir -p $css_out
mkdir -p $js_out

# admin-lte
cp node_modules/admin-lte/bootstrap/css/bootstrap.min.css $css_out
cp node_modules/admin-lte/dist/css/AdminLTE.min.css $css_out/admin-lte.min.css
cp node_modules/admin-lte/dist/css/skins/skin-blue.min.css $css_out
cp node_modules/admin-lte/bootstrap/js/bootstrap.min.js $js_out
cp node_modules/admin-lte/dist/js/app.min.js $js_out/admin-lte.min.js

# vue
cp node_modules/vue/dist/vue.min.js $js_out
cp node_modules/axios/dist/axios.min.js $js_out

